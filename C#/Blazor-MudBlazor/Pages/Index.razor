@page "/"

<PageTitle>Index</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Hello, world!</MudText>

<MudText Class="mb-8">Welcome to your new app, powered by MudBlazor!</MudText>

<MudAlert Severity="Severity.Normal">You can find documentation and examples on our website here: 
    <MudLink Href="https://mudblazor.com" Typo="Typo.body2" Color="Color.Inherit">
        <b>www.mudblazor.com</b>
    </MudLink>
</MudAlert>

<div style="display:block">
    <MudButton>
        <MudIcon Icon="@Icons.Filled.Star" Size="Size.Small" Color="@GetIconColor()"/>
    </MudButton>
</div>

@code
{
    Color GetIconColor()
    {
        Color c = (DateTime.Now.Second > 30 ? Color.Warning : Color.Info);
        return c;
    }
}
